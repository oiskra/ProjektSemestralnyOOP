<Window x:Class="ProjektSemestralnyOOP.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektSemestralnyOOP"
        xmlns:viewModel="clr-namespace:ProjektSemestralnyOOP.MVVM.ViewModel" 
        mc:Ignorable="d"
        Title="Login" 
        Height="500" 
        Width="350"
        ResizeMode="NoResize"
        Background="#001334">
    <Grid>
        <Rectangle Width="350" Height="500" Grid.ColumnSpan="3" Grid.RowSpan="7">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#001340" Offset="0.0" />
                    <GradientStop Color="#00136f" Offset="1" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <StackPanel>
            <TextBlock Text="LOGIN FORM"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Foreground="White"
                       FontSize="50"
                       FontFamily="Segoe UI Light"
                       Margin="0 50 0 0"/>

            <Label Content="LOGIN" 
                   Foreground="White"
                   FontSize="13"
                   FontFamily="Segoe UI Light"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0 30 0 0"/>
            <TextBox Height="35" 
                     Width="200"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     FontFamily="Segoe UI Light"
                     Text="{Binding Login}">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Label Content="PASSWORD" 
                   Foreground="White"
                   FontSize="13"
                   FontFamily="Segoe UI Light"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="0 5 0 0"/>
            <TextBox Height="35" 
                     Width="200"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     FontFamily="pack://application:,,,/Resources/#password"
                     Text="{Binding Password}">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>



            <Button Height="35" 
                    Width="175"
                    Margin="0 50 0 0"
                    Background="#0f004a"
                    Content="LOG IN"
                    Foreground="White"
                    BorderBrush="Black"
                    Command="{Binding SubmitButton}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Height="35" 
                    Width="175"
                    Margin="0 10 0 0"
                    Background="#0f004a"
                    Content="CANCEL"
                    Foreground="White"
                    BorderBrush="Black"
                    Command="{Binding CancelButton}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
            </Button>

        </StackPanel>
    </Grid>
</Window>
