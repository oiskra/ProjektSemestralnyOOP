<Application x:Class="ProjektSemestralnyOOP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ProjektSemestralnyOOP"
             xmlns:viewModel ="clr-namespace:ProjektSemestralnyOOP.MVVM.ViewModel"
             xmlns:view ="clr-namespace:ProjektSemestralnyOOP.MVVM.View"
             Startup="OnStartup">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModel:StartUpViewModel}">
            <view:StartUpView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ProfileViewModel}">
            <view:ProfileView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:MarketViewModel}">
            <view:MarketView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModel:YourCarsViewModel}">
            <view:YourCarsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:RacesViewModel}">
            <view:RacesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:AdminPanelViewModel}">
            <view:AdminPanelView/>
        </DataTemplate>
    </Application.Resources>
</Application>
